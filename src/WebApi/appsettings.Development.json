{
  "ServiceSettings": {
    "ServiceName": "api-service",
    "ServiceHost": "host.docker.internal",
    "ServicePort": 9001,
    "ServiceDiscoveryAddress": "http://localhost:8500",
    "GatewayPort": 9000,
    "GatewayHost": "api-gateway",
    "RediHost": "localhost"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft.Extensions.Hosting": "Warning",
        "Default": "Debug"
      }
    },
    "EventSource": {
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "EventLog": {
      "LogLevel": {
        "Microsoft": "Information"
      }
    }
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "http://localhost:56340",
          "https://localhost:44396",
          "http://localhost:5263",
          "https://localhost:7106"
        ],
        "ValidIssuer": "dotnet-user-jwts"
      }
    }
  }
}